
<% if @cocktail.photo.attached? %>
<div class="banner-cocktail"  style="background-image: linear-gradient(110deg, rgba(0,0,0,0) 40%,rgba(0,0,0,0.8) 100%), url(<%= cl_image_path(@cocktail.photo.key) %>);">
<% else %>
<div class="banner-cocktail"  style="background-color: linear-gradient(110deg, rgba(0,0,0,0) 40%,rgba(0,0,0,0.8) 100%);">
<% end %>
  <div class="container">
    <div class="offset-md-6 ">
      <div class="banner-header d-flex flex-column align-items-center">
        <h1><%= @cocktail.name %></h1>
        <p><%= @cocktail.description %></p>
      </div>

      <div class="container-ingredients">
        <h2>Liste des ingr√©dients :</h2>
        <ul class="list-ingredients">
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= link_to dose_path(dose), method: :delete do %>
            <i class="far fa-times-circle"></i>
            <% end %><%= dose.description %> de <%= dose.ingredient.name %>
            </li>
          <% end %>
        </ul>
      </div>


        <div class="btn btn-ghost edit-button add-ingredient">
          <i class="far fa-edit"></i> Add new ingredient
        </div>

      <%= link_to edit_cocktail_path(@cocktail) do %>
        <div class="btn btn-ghost edit-button">
          <i class="far fa-edit"></i> Edit cocktail
        </div>
      <% end %>

      <%= render partial: "doses/new", cocktail: @cocktail, dose: @dose %>

    </div>
  </div>

  <%= link_to cocktails_path do %>
    <div class="">
      <i class="fas fa-undo-alt"></i>Back to cocktails list
    </div>
  <% end %>
</div>
